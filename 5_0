#include <stdio.h>
#define SQUARES 64 // squares on a checkerboard

int main(void)
{
	const double CROP = 2E16; // world wheat production in wheat grains
	double current, total;
	int count = 1;
	printf("square \t%13s \t%12s \t%12s \n", "grains", "total", "fraction of");
	printf("\t%13s \t%12s \t%12s \n", "added", "tgrains", "world total");
	

	total = current = 1.0; /* start with one grain */
	printf("%4d \t%13.2e \t%12.2e \t%12.2e\n", count, current, total, total/CROP);
	while (count < SQUARES){
		count = count + 1;
		current = 2.0 * current;	
		total = total + current;
		printf("%4d \t%13.2e \t%12.2e \t%12.2e\n", count, current, total, total/CROP);
	}
	printf("That's all.\n");

	return 0;	
}
